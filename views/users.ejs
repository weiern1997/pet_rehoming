<!DOCTYPE html>
<html>

<head>
  <%- include ('partials/head.ejs') %>

</head>

<body class="hold-transition sidebar-mini">
  <!-- Site wrapper -->
  <div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-dark navbar-light">
      <%- include ('partials/header.ejs') %>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
      <%- include ('partials/sidebar.ejs', {user:user}) %>
      <!-- /.sidebar -->
    </aside>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>Users</h1>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>

      <!-- Main content -->
      <section class="content">

        <!-- Default box -->
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">Users</h3>
          </div>
          <div class="card-body p-0">
            <table class="table table-striped projects">
              <thead>
                <tr>
                  <th style="width: 1%">
                    No.
                  </th>
                  <th style="width: 20%">
                    Username
                  </th>
                  <th style="width: 30%">
                    Email
                  </th>
                  <th>
                    Access
                  </th>
                  <th style="width: 8%" class="text-left">
                    Admin
                  </th>
                  <th style="width: 20%">
                  </th>
                </tr>
              </thead>
              <tbody>
                <% for(var i = 0; i<users.length; i++){%>
                <tr>
                  <td>
                    <p>
                      <%= i+1 %>
                    </p>
                  </td>
                  <td>
                    <p>
                      <%= users[i].username %>
                    </p>
                  </td>
                  <td>
                    <p class="text-left"><%= users[i].email %></p>
                  </td>
                  <td>
                    <p>
                      <%= users[i].access %>
                    </p>
                  </td>
                  <td>
                    <% if(users[i].admin){%>
                    <span class="badge badge-success">True</span>
                    <%}
                            else {%>
                    <span class="badge badge-light">False</span>
                    <%}
                                %>
                  </td>
                  <td class="project-actions text-center">
                    <% if (!users[i].admin) {%>
                    <form action='/users/delete' method='post'>
                      <input type="hidden" name="user" value="<%=users[i].username%>">
                      <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                    <%}
                    %>

                  </td>
                </tr>
                <%}
                    %>

              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->

      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

     <footer class="main-footer">
      <strong>Archisen BizTron</strong> 
    </footer>


    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
      <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
  </div>
  <!-- ./wrapper -->

  <%- include ('partials/footer.ejs') %>

  <script>
    $(document).ready(function () {
      $(":input").click(function () {
        return confirm("Delete user?");
      });
    });
  </script>
</body>

</html>