<!DOCTYPE html>
<html>

<head>
  <%- include ('partials/head.ejs') %>
  <style>
    tr.hide-table-padding td {
      padding: 0;
    }
  </style>
</head>

<body class="hold-transition sidebar-mini">
  <!-- Site wrapper -->
  <div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-dark navbar-light">
      <%- include ('partials/header.ejs') %>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
      <%- include ('partials/sidebar.ejs', {user:user}) %>
      <!-- /.sidebar -->
    </aside>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-1">
              <h1>Pets</h1>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>


      <!-- Main content -->
      <section class="content">
        <!-- Default box -->
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">Pets</h3>
          </div>
          <div class="card-body p-0">
            <!--Display all pets, 3 in a row-->
            <table class="table table-striped projects">
              <thead>
                <tr>
                  <th style="width: 10%">
                    Name
                  </th>
                  <th style="width: 10%">
                    Breed
                  </th>
                  <th style="width: 10%">
                    Age
                  </th>
                  <th style="width: 50%">
                    Picture
                  </th>
                  <th style="width: 20%">
                    Actions
                  </th>
                </tr>
              </thead>
              <tbody>
                <% pets.forEach(function(pet) { %>
                <tr>
                  <td>
                    <a>
                      <%= pet.name %>
                    </a>
                  </td>
                  <td>
                    <%= pet.breed %>
                  </td>
                  <td>
                    <%= pet.age %>
                  </td>
                  <td>
                    <img src="data:image/<%=pet.img.contentType%>;base64,
                    <%=pet.img.data.toString('base64')%>" alt="<%= pet.name %>"  height="300">
                  </td>
                  <td class="project-actions">
                    <a class="btn btn-primary btn-sm" href="/pets/<%= pet.id %>">
                      <i class="fas fa-folder">
                      </i>
                      View
                    </a>
                    <!-- Delete form-->
                    <form action="/pets/<%= pet.id %>/delete" method="POST">
                      <button type="submit" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash">
                        </i>
                        Delete
                      </button>
                    </form>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>

          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->

      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    
    <footer class="main-footer">
      <strong>Pets surrendering</strong> 
    </footer>

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
      <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
  </div>
  <!-- ./wrapper -->

  <%- include ('partials/footer.ejs') %>

</body>

</html>