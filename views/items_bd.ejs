<!DOCTYPE html>
<html>

<head>
  <%- include ('partials/head.ejs') %>

</head>

<body class="hold-transition sidebar-mini">
  <div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-dark navbar-light">
      <%- include ('partials/header.ejs') %>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
      <%- include ('partials/sidebar.ejs', {user:user}) %>
      <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>Inventory</h1>
            </div>

            <% if(locals.message){ %>
            <div>
              <%= message %>
            </div>
            <% } %>
          </div>
        </div><!-- /.container-fluid -->
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">


          <div class="row mb-2">
            <!-- View Product-->
            <div class="col-md-12">
              <div id="main-card" class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Available inventory</h3>
                </div>
                <!-- /.card-header -->
                  <div class="card-body p-0">
                    <table class="table">
                      <thead>
                        <tr>
                          <th style="width: 10%">No.</th>
                          <th style="width: 50%">SKUs</th>
                          <th style="width: 40%">Amount</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for( let i = 0; i < products.length; i++ ) { %>
                          <td><%= i+1 %></td>
                          <td><%= products[i].name %> </td>
                          <td><%=products[i].quantity%></td>
                        </tr>
                        <%}%>

                      </tbody>
                    </table>
                  </div>
                  <!-- /.card-body -->
                  <div class='card-footer'>
                  </div>
              </div>
            </div>
            <!-- ./View Product-->

          </div>
          <!-- /.row -->
        </div>
      </section>
   

    </div>

     <footer class="main-footer">
      <strong>Archisen BizTron</strong> 
    </footer>


    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
      <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
  </div>
  <!-- ./wrapper -->

  <%- include ('partials/footer.ejs') %>
  <script src="/js/items_farm.js"></script>

</body>

</html>