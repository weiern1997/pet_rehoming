<!DOCTYPE html>
<html>

<head>
  <%- include ('partials/head.ejs') %>

</head>

<body class="hold-transition sidebar-mini">
  <div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-dark navbar-light">
      <%- include ('partials/header.ejs') %>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
      <%- include ('partials/sidebar.ejs', {user:user}) %>
      <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>Inventory</h1>
            </div>

            <% if(locals.message){ %>
            <div>
              <%= message %>
            </div>
            <% } %>
          </div>
        </div><!-- /.container-fluid -->
      </section>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">


          <div class="row mb-2">
            <div class="col-sm-2">
              <button data-toggle="modal" data-target="#modal-warning" id="add_entry" class="btn btn-warning"><i
                  class="fa fa-plus"></i></button>
            </div>
          </div>
          <div class="modal fade" id="modal-warning">
            <div class="modal-dialog">
              <div class="modal-content bg-warning">
                <div class="modal-header">
                  <h4 class="modal-title">Add Item</h4>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                </div>
                  <form id="add_form" onsubmit="return confirm('Add SKU?');" action="/items/add" method="post">
                    <div class="modal-body">
                      <div class="form-group">
                        <label for="exampleInputEmail1">SKU</label>
                        <select class="form-control select2bs4" name="SKU_name" style="width: 100%;">
                          <option selected="selected">Just-Mesclun</option>
                          <option>Just-Mesclun w Mustard</option>
                          <option>Just-Mesclun w Sorrell</option>
                          <option>Just-Mesclun w Whatever</option>
                        </select>
                      </div>
                      <div class="form-group">
                        <label>Quantity</label>
                        <input type="number" min="1" oninput="validity.valid||(value='');" id="add_amt" name="add_amt"
                          placeholder="Add amt" required>
                      </div>
                    </div>
                    <div class="modal-footer justify-content-between">
                      <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Close</button>
                      <button type="submit" class="btn btn-danger">Add</button>
                    </div>
                  </form>
              </div>
              <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
          </div>
          <div class="row mb-2">
            <!-- View Product-->
            <div class="col-md-12">
              <div id="main-card" class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Update inventory</h3>
                </div>
                <!-- /.card-header -->
                <form >
                  <div class="card-body p-0">
                    <table class="table">
                      <thead>
                        <tr>
                          <th style="width: 10%">No.</th>
                          <th style="width: 50%">SKUs</th>
                          <th style="width: 40%">Amount</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for( let i = 0; i < products.length; i++ ) { %>
                          <td><%= i+1 %></td>
                          <td><%= products[i].name %> </td>
                          <td><input type="number" oninput="validity.valid||(value='');" name="<%=products[i]._id%>"
                            value="<%=products[i].quantity%>" required> </td>
                        </tr>
                        <%}%>

                      </tbody>
                    </table>
                  </div>
                  <!-- /.card-body -->
                  <div class='card-footer'>
                    <button type='button' id="set_button" class="btn btn-primary">Submit</button>
                  </div>
                </form>
              </div>
            </div>
            <!-- ./View Product-->

          </div>
          <!-- /.row -->
        </div>
      </section>
   

    </div>

     <footer class="main-footer">
      <strong>Archisen BizTron</strong> 
    </footer>


    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
      <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
  </div>
  <!-- ./wrapper -->

  <%- include ('partials/footer.ejs') %>
  <script src="/js/items_farm.js"></script>

</body>

</html>